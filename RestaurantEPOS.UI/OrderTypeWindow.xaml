<Window x:Class="RestaurantEPOS.UI.OrderTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantEPOS.UI"
        xmlns:view="clr-namespace:RestaurantEPOS.UI.View"
        mc:Ignorable="d"
        Title="OrderTypeWindow">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!--Views-->
        <StackPanel Grid.Row="0">
            <Label Content="Select one of the following options" FontSize="28" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <view:OrderTypeSelection />
        </StackPanel>
    </Grid>
</Window>
