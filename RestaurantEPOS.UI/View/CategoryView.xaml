<UserControl x:Class="RestaurantEPOS.UI.View.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantEPOS.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0">Veg Starters</Button>
        <Button Grid.Column="0" Grid.Row="1">Non.Veg Starters</Button>
        <Button Grid.Column="0" Grid.Row="2">Indo-Chinese</Button>
        <Button Grid.Column="0" Grid.Row="3">Main Course</Button>
        <Button Grid.Column="0" Grid.Row="4">Nan Breads</Button>
        <Button Grid.Column="0" Grid.Row="5">Rice</Button>
    </Grid>
</UserControl>
